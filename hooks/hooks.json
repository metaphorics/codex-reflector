{
  "description": "Codex reflector: code review (async), plan review (sync), thinking metacognition (sync), bash failure diagnostics (async), subagent review (sync), stop review (sync), and pre-compact summary",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|mcp__morph-mcp__edit_file",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/codex-reflector.py\" --effort medium",
            "timeout": 120,
            "async": true
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/codex-reflector.py\" --effort high",
            "timeout": 120
          }
        ]
      },
      {
        "matcher": "mcp__plugin_odin_sequentialthinking-tools__.*|mcp__plugin_odin_actor-critic-thinking__.*|mcp__plugin_odin_shannon-thinking__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/codex-reflector.py\" --effort low",
            "timeout": 120
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/codex-reflector.py\" --effort low",
            "timeout": 120,
            "async": true
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/codex-reflector.py\" --effort high",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/codex-reflector.py\" --effort high",
            "timeout": 120
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/codex-reflector.py\" --effort medium",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
